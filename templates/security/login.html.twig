{% extends 'base.html.twig' %}

{% block title %}Worksite : Connexion
{% endblock %}

{% block body %}

	<div class="row mt-5">
    	<div class="col-md-8 offset-md-2">
			<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
		<label for="inputMatricule">Matricule</label>
		<input type="text" value="{{ last_username }}" name="matricule" id="inputMatricule" class="form-control" required autofocus placeholder="Votre matricule">
		<label for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Votre mot de passse">

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button class="btn btn-lg btn-primary mt-4" type="submit">
			Se connecter
		</button>
		<p class="mt-3 ml-3"><a href="{{path('app_register')}}" class="text-success" style="font-size:18px">créez un compte</a></p>
	</form>
    	</div>
  	</div>
{% endblock %}
